  text("Do your best and have fun!", 77, 340);
  beginButton.draw();
};

//1.5 mScene1 response scene, 1.6 is mScene2 response scene
mouseClicked = function(){
    if (mouseX >= 5 && mouseX <= 130 && mouseY >= 295 && mouseY <= 385){
        if (currentScene === 1){
                currentScene = 2;
                score += 1;
        } //first answer box in scene 1.
        else if (currentScene === 2){
                currentScene = 3;
                score += 1;
        } //first answer box in scene 2. 
        else if (currentScene === 3){
                currentScene = 3.5;
                score -= 1;
        } //mistake answer box in scene 3
        else if (currentScene === 4){
                currentScene = 4.5;
                score -= 1;
        }
        else if (currentScene === 5){
                currentScene = 6;
                score += 1;
        }
        else if (currentScene === 6){
                currentScene = 6.5;
                score -= 1;
        }
        else if (currentScene === 7){
                currentScene = 7.5;
                score -= 1;
        }
        else if (currentScene === 8){
                currentScene = 8.5;
                score -= 1;
        }
        else if (currentScene === 9){
                currentScene = 10;
                score += 1;
        }
        else if (currentScene === 10){
                currentScene = 10.5;
                score -= 1;
        }
    }
    if (mouseX >= 145 && mouseX <= 255 && mouseY >= 295 && mouseY <= 385){
        if (currentScene === 1){
                currentScene = 1.5;
                score -= 1;
        }
        else if (currentScene === 2){
                currentScene = 2.5;
                score -= 1;
        }
        else if (currentScene === 3){
                currentScene = 3.6;
                score -= 1;
        }
        else if (currentScene === 4){
                currentScene = 5;
                score += 1;
        }
        else if (currentScene === 5){
                currentScene = 5.5;
                score -= 1;
        }
        else if (currentScene === 6){
                currentScene = 6.5;
                score -= 1;
        }
        else if (currentScene === 7){
                currentScene = 8;
                score += 1;
        }
        else if (currentScene === 8){
                currentScene = 8.5;
                score -= 1;
        }
        else if (currentScene === 9){
                currentScene = 9.5;
                score -= 1;
        }
        else if (currentScene === 10){
                currentScene = 10.5;
                score -= 1;
        }
    }
    if (mouseX >= 287 && mouseX <= 397 && mouseY >= 295 && mouseY <= 385){
        if (currentScene === 1){
                currentScene = 1.6;
                score -= 1;
        }
        else if (currentScene === 2){
                currentScene = 2.6;
                score -= 1;
        }
        else if (currentScene === 3){
                currentScene = 4;
                score += 1;
        }
        else if (currentScene === 4){
                currentScene = 4.6;
                score -= 1;
        }
        else if (currentScene === 5){
                currentScene = 5.6;
                score -= 1;
        }
        else if (currentScene === 6){
                currentScene = 7;
                score += 1;
        }
        else if (currentScene === 7){
                currentScene = 7.5;
                score -= 1;
        }
        else if (currentScene === 8){
                currentScene = 9;
                score += 1;
        }
        else if (currentScene === 9){
                currentScene = 9.5;
                score -= 1;
        }
        else if (currentScene === 10){
                currentScene = 11;
                score += 1;
        }
    }
};


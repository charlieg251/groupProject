    rect(2, 126, 402, 126);// counter
    drawBitmoji(63,-1,42); //Charlie's Call
    drawEmoji(288,59,98);  //Danny's Call
    fill(0, 0, 0);
    textSize(18);
    text(this.error, 144, 20);
    fill(0, 0, 0);
    textSize(22);
    tryAgain.draw();
    text("Score: " + score, 20, 284);
};


//1.5 Mistake1 response scene, 1.6 is mistake2 response scene
mouseClicked = function(){
    if (mouseX >= 5 && mouseX <= 111 && mouseY >= 304 && mouseY <= 412){
        if (currentScene >= 1 && currentScene < 2){
                currentScene = 2;
        } //first answer box in scene 1.
        else if (currentScene >= 2 && currentScene < 3){
                currentScene = 3;
        } //first answer box in scene 2. 
    }
    if (mouseX >= 145 && mouseX <= 255 && mouseY >= 304 && mouseY <= 412){
        if (currentScene >= 1 && currentScene < 2){
                currentScene = 1.5;
        }
    }
    if (mouseX >= 287 && mouseX <= 397 && mouseY >= 304 && mouseY <= 382){
        if (currentScene >= 1 && currentScene < 2){
                currentScene = 1.6;
        }
    }
      /*  if (mouseX >= 287 && mouseX <= 397 && mouseY >= 304 && mouseY <= 382){
        if (currentScene >= 1 < 3){
                currentScene = 1.7;
        }
    }*/
};

draw = function() {
    if (currentScene === 0){
      splash();
    }
    else if (currentScene === 1) {
      game1();
    }
    else if (currentScene === 2) {
      game2();
    }
    else if (currentScene === 3) {
      game3();
    }
    else if (currentScene === 1.5) {
        mistake1();
    }
     else if (currentScene === 1.6) {
        mistake2();
    }
        else if (currentScene === 2.5){
        mistake3();
    }
    else if (currentScene === 2.6){
        mistake4();
    }

};
